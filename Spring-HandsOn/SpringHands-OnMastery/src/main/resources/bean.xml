<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
       
       
       
    
    
<!--       Construction Injection -->
<bean id="battery" class="com.learning.spring.day5.Battery">
        <constructor-arg value="BAT123"/>
        <constructor-arg value="Rechargeable Battery"/>
        <constructor-arg value="20.00"/>
        <constructor-arg value="true"/>
        
    </bean>

    <bean id="disc" class="com.learning.spring.day5.Disc">
        <constructor-arg value="DISC456"/>
        <constructor-arg value="DVD Disc"/>
        <constructor-arg value="10.00"/>
        <constructor-arg value="5000"/>
       
    </bean>




